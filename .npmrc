# # Enable strict peer dependencies
# strict-peer-dependencies=false

# # Use hard links for better performance
# symlink=false

# # Enable auto install peers
# auto-install-peers=true

# # Use the workspace protocol for internal packages
# prefer-workspace-packages=true

# # Enable side-effects cache
# side-effects-cache=true

# # Enable node modules hoisting
# hoist-pattern[]=*

# # Enable public hoisting for better compatibility
# public-hoist-pattern[]=*eslint*
# public-hoist-pattern[]=*prettier*
# public-hoist-pattern[]=*typescript*
